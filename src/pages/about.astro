<style lang="scss">
  .hero-section {
    padding: 4rem 0 2rem;
    background: linear-gradient(135deg, rgba(2, 8, 23, 0.9) 0%, rgba(13, 42, 148, 0.1) 100%);
    position: relative;
    overflow: hidden;
    
    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: radial-gradient(circle at 30% 20%, rgba(21, 255, 147, 0.15) 0%, transparent 50%),
                  radial-gradient(circle at 70% 80%, rgba(14, 165, 233, 0.15) 0%, transparent 50%);
      pointer-events: none;
    }
  }

  .hero-content {
    position: relative;
    z-index: 2;
  }

  .greeting-wrapper {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .typing-indicator {
    display: flex;
    gap: 4px;
    
    .dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: var(--color-lime);
      animation: typing 1.5s infinite;
      
      &:nth-child(2) { animation-delay: 0.2s; }
      &:nth-child(3) { animation-delay: 0.4s; }
    }
  }

  @keyframes typing {
    0%, 60%, 100% { opacity: 0.3; transform: scale(1); }
    30% { opacity: 1; transform: scale(1.2); }
  }

  .intro-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .intro-text {
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--color-silver-200);
    margin-bottom: 2rem;
    
    .highlight {
      background: linear-gradient(135deg, #15ff93 0%, #0ea5e9 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      font-weight: 600;
    }
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .stat-item {
    text-align: center;
    
    .stat-number {
      font-size: 2rem;
      font-weight: 700;
      color: var(--color-lime);
      margin-bottom: 0.5rem;
    }
    
    .stat-label {
      color: var(--color-silver-400);
      font-size: 0.875rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
  }

  .about-details {
    padding: 4rem 0;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    align-items: start;
  }

  .profile-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 2rem;
    text-align: center;
    position: sticky;
    top: 120px;
  }

  .profile-avatar {
    margin-bottom: 1.5rem;
    display: flex;
    justify-content: center;
  }

  .profile-photo-wrapper {
    position: relative;
    width: 280px;
    height: 280px;
    border-radius: 50%;
    overflow: hidden;
    transition: transform 0.3s ease-in-out;
    
    &::before {
      content: '';
      position: absolute;
      inset: -2px;
      background: linear-gradient(45deg, 
        rgba(21, 255, 147, 0.7),
        rgba(14, 165, 233, 0.7),
        rgba(139, 92, 246, 0.7)
      );
      border-radius: 50%;
      z-index: 1;
      opacity: 0;
      transition: opacity 0.3s ease-in-out;
    }
    
    &::after {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(45deg, 
        rgba(21, 255, 147, 0.2),
        rgba(14, 165, 233, 0.2),
        rgba(139, 92, 246, 0.2)
      );
      border-radius: 50%;
      z-index: 1;
    }
    
    &:hover {
      transform: scale(1.02);
      
      &::before {
        opacity: 0.1;
      }
    }
    
    .profile-photo {
      position: relative;
      z-index: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease-in-out;
    }
  }

  .profile-info {
    h3 {
      margin: 0 0 0.5rem 0;
      color: var(--color-silver-100);
      font-size: 1.25rem;
    }
    
    p {
      color: var(--color-silver-400);
      margin: 0 0 1rem 0;
    }
  }

  .status-indicator {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    color: var(--color-lime);
    font-size: 0.875rem;
    
    .status-dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: var(--color-lime);
      animation: pulse 2s infinite;
    }
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .detail-cards {
    display: grid;
    gap: 1.5rem;
  }

  .detail-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    
    &:hover {
      background: rgba(255, 255, 255, 0.05);
      border-color: rgba(21, 255, 147, 0.3);
      transform: translateY(-2px);
    }
    
    .card-icon {
      color: var(--color-lime);
      margin-bottom: 1rem;
    }
    
    h4 {
      margin: 0 0 1rem 0;
      color: var(--color-silver-100);
      font-size: 1.125rem;
    }
    
    p {
      color: var(--color-silver-300);
      line-height: 1.6;
      margin: 0;
    }
  }

  .tech-stack {
    padding: 4rem 0;
    background: rgba(255, 255, 255, 0.02);
  }

  .experience {
    padding: 4rem 0;
  }

  .section-heading {
    font-size: 2.5rem;
    text-align: center;
    margin: 0 0 0.5rem 0;
    background: linear-gradient(135deg, #ffffff 0%, #15ff93 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-subtitle {
    text-align: center;
    color: var(--color-silver-400);
    margin: 0 0 3rem 0;
    font-size: 1.125rem;
  }

  /* Marquee styles */
  .marquee {
    --gap: 1.5rem;
    position: relative;
    display: flex;
    overflow: hidden;
    user-select: none;
    gap: var(--gap);
    margin: 3.5rem 0;
    &:hover {
      .marquee-content {
        animation-play-state: paused;
      }
    }
  }

  .marquee-content {
    flex-shrink: 0;
    display: flex;
    justify-content: space-around;
    gap: var(--gap);
    min-width: 100%;
    animation: scroll 60s linear infinite reverse;
  }

  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(calc(-100% - var(--gap)));
    }
  }

  /* Pause animation when reduced-motion is set */
  @media (prefers-reduced-motion: reduce) {
    .marquee-content {
      animation-play-state: paused !important;
    }
  }

  .timeline-items {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  @media screen and (max-width: 980px) {
    .hero-section {
      padding: 2rem 0 1rem;
    }
    
    .greeting-wrapper {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
    
    .intro-card {
      padding: 1.5rem;
    }
    
    .intro-text {
      font-size: 1.125rem;
    }
    
    .stats-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1rem;
      
      .stat-number {
        font-size: 1.5rem;
      }
    }
    
    .content-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .profile-card {
      position: static;
    }
    
    .section-heading {
      font-size: 2rem;
    }
  }
</style>

<script>
  import { greeting as greetingFunction } from "../js/greeting";
  const greeting = document.getElementById("greeting");
  if (greeting) {
    greeting.innerHTML = greetingFunction();
  }
</script>