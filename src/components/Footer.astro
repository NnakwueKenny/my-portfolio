<style lang="scss">
  footer {
    display: flex;
    justify-content: space-between;
    margin-top: auto;
    padding: 1.5rem 0;
    width: 100%;
    p {
      font-size: var(--font-size-sm);
    }
  }

  .legal {
    font-family: var(--font-family-IBM-Plex-Mono);
    color: var(--color-silver-400);
  }

  .social-icon-list {
    display: inline-flex;
    align-items: center;
    padding: 0;
    column-gap: 0.75rem;
    list-style-type: none;
    li {
      color: var(--color-mint);
      &:hover {
        filter: brightness(125%);
      }
    }
  }

  @media screen and (max-width: 980px) {
    footer {
      flex-wrap: wrap;
      align-items: center;
      padding-bottom: 5px;
    }

    .legal {
      font-size: var(--font-size-xs);
      line-height: 1.25rem;
      margin: 0;
    }
  }
</style>