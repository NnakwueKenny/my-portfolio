---
interface Props {
  isCurrent?: boolean;
  title: string;
  company: string;
  startDate: string;
  endDate?: string;
  logo: string;
  workMode: string;
  responsibilities: string[];
}

const { title, company, startDate, endDate, logo, responsibilities, isCurrent, workMode } = Astro.props;

// Calculate the duration in milliseconds
const start = new Date(startDate).getTime();
const end = endDate ? new Date(endDate).getTime() : Date.now();
const duration = end - start;

// Format the duration as "X years Y months"
const years = Math.floor(duration / 1000 / 60 / 60 / 24 / 365);
const months = Math.floor(duration / 1000 / 60 / 60 / 24 / 30) % 12;
---

<div class={`timeline-item ${isCurrent ? "active" : ""}`}>
  <img class="logo" width="40px" height="40px" src={logo} alt={company} />
  <div class="details">
    <div class="title">{title} <span class="sep">|</span> <span class="company">{company}</span> <span class='sep'>|</span> <span class="company">{workMode}</span></div>
    <p class="time">
       {startDate} - {endDate || "Present"}
    </p>
    <ul class="responsibilities">
      {responsibilities.map((responsibility) => (
        <li>{responsibility}</li>
      ))}
    </ul>
  </div>
</div>

