---
interface Props {
  variant?: "solid" | "outline";
  href?: string;
  target?:string;
  size?: "xs" | "sm" | "md" | "lg" | "xl";
  colorScheme?: "blue" | "lime" | "mint" | "silver" | 'yellow';
  class?: string;
  domProps?: { [key: string]: any }
}

const {
  variant = "solid",
  href, target,
  size = "md",
  colorScheme = "mint",
  domProps = {}
} = Astro.props;

const className = `button ${variant} size-${size} colorScheme-${colorScheme} ${Astro.props.class || ""}`;
---

{href ? (
  <a class={className} href={href} target={target} {...domProps}>
    <slot />
  </a>
) : (
  <button class={className} {...domProps}>
    <slot />
  </button>
)}

